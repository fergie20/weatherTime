<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#28323e</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="weather_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_size">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#F0F8FF</item>
    </style>

    <style name="icons_size">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="black_text_color">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="white_text_color">
        <item name="android:textColor">#F0F8FF</item>
    </style>

</resources>
